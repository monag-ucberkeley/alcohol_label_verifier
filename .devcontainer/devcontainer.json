{
  "name": "Alcohol Label Verifier (Codespaces)",

  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",

  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },

  "forwardPorts": [5173, 8000],

  "portsAttributes": {
    "5173": { "label": "Frontend", "onAutoForward": "openBrowser" },
    "8000": { "label": "Backend API", "onAutoForward": "openBrowser" }
  },

  "postStartCommand": "docker compose up --build -d"
}
